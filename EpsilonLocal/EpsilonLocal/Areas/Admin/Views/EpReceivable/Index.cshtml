@model List<EpsilonLocal.Models.EpReceivable>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
    decimal totalamount = 0;
    decimal totaledv = 0;

}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Epsilon Receivables</h4>
                <a class="btn btn-success" asp-action="Create">Create Epsilon Receivable</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Number
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Month
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Edv
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Client
                                </th>

                                <th>

                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (EpsilonLocal.Models.EpReceivable expense in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @expense.Date
                                    </td>
                                    <td>
                                        @expense.Month
                                    </td>
                                    <td>
                                        @expense.Amount manat
                                    </td>
                                    <td>
                                        @expense.Edv
                                    </td>
                                    <td>
                                        @expense.Description
                                    </td>
                                    <td>
                                        @expense.Client
                                    </td>




                                    <td>
                                       
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@expense.Id"><i class="mdi mdi-table-edit"></i></a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@expense.Id"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                                count++;
                                totalamount = totalamount + expense.Amount;
                                totaledv = totaledv + expense.Edv;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Total Amount : @totalamount
                        </th>
                        <th>
                            Total Edv: @totaledv
                        </th>

                    </tr>
                </thead>
                </table>
        </div>
    </div>
</div>