@model List<EpsilonLocal.Models.EpPayable>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
    decimal totalamount = 0;

 
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Epsilon Payables</h4>
                <a class="btn btn-success" asp-action="Create">Create Epsilon Payables</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Number
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Month
                                </th>
                                <th>
                                     Amount
                                </th>
                                <th>
                                    Contractor
                                </th>
                                <th>
                                    Description
                                </th>
                                
                               
                                <th>

                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (EpsilonLocal.Models.EpPayable expense in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @expense.Date
                                    </td>
                                    <td>
                                        @expense.Month
                                    </td>
                                    <td>
                                        @expense.Amount manat
                                    </td>
                                    <td>
                                        @expense.Contractor
                                    </td>
                                    <td>
                                        @expense.Description
                                    </td>
                                 
                                   


                                    <td>
                                       
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@expense.Id"><i class="mdi mdi-table-edit"></i></a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@expense.Id"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                                count++;
                                totalamount = totalamount + expense.Amount;

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                             Amount total: @totalamount
                        </th>
                       
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>