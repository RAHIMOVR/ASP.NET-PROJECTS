@model List<EpsilonLocal.Models.Opportunity>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
    decimal total = 0;
    int element = 34;                                                                                                                                       
    string value = "oppurtunity";                                                                                                                           
}      
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Epsilon Opportunity</h4>
                <a class="btn btn-success" asp-action="Create">Create Epsilon Oppurtunity</a>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>  
                                    Number 
                                </th>  
                                <th>
                                    Project Name
                                </th> 
                                <th>
                                    Client 
                                </th>
                                <th>
                                    Value 
                                </th>
                                <th>
                                    Probability
                                </th>
                                <th>
                                    Contact Person
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Deadline
                                </th>
                                <th>
                                    Contract Status
                                </th>
                                <th>
                                    Contract Date
                                </th>
                                <th>
                                    Comments
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (EpsilonLocal.Models.Opportunity expense in Model)
                            {
                                if (expense.Status == "live")
                                {
                                    <tr style="color:blue">
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            @expense.ProjectName
                                        </td>
                                        <td>
                                            @expense.Client
                                        </td>
                                        <td>
                                            @expense.Value
                                        </td>
                                        <td>
                                            @expense.Probability
                                        </td>
                                        <td>
                                            @expense.ContactPerson
                                        </td>
                                        <td>
                                            @expense.Status
                                        </td>
                                        <td>
                                            @expense.Deadline
                                        </td>
                                        <td>
                                            @expense.ContractStatus
                                        </td>
                                        <td>
                                            @expense.ContractDate
                                        </td>
                                        <td>
                                            @expense.Comments
                                        </td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@expense.Id"><i class="mdi mdi-account-card-details"></i></a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@expense.Id"><i class="mdi mdi-table-edit"></i></a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@expense.Id"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr> 
                                }
                                else
                                {              
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            @expense.ProjectName
                                        </td>
                                        <td>
                                            @expense.Client
                                        </td>
                                        <td>
                                            @expense.Value
                                        </td>
                                        <td>
                                            @expense.Probability
                                        </td>
                                        <td>
                                            @expense.ContactPerson
                                        </td>
                                        <td>
                                            @expense.Status
                                        </td>
                                        <td>
                                            @expense.Deadline
                                        </td>
                                        <td>
                                            @expense.ContractStatus
                                        </td>
                                        <td>
                                            @expense.ContractDate
                                        </td>
                                        <td>
                                            @expense.Comments
                                        </td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@expense.Id"><i class="mdi mdi-account-card-details"></i></a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@expense.Id"><i class="mdi mdi-table-edit"></i></a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@expense.Id"><i class="mdi mdi-delete"></i></a>
                                        </td>
                                    </tr>
                                }
                                
                                count++;
                                total = total + expense.Value;
                                @*                                incomingtotal = total - mtotal;
*@                                //incomingtotal = +total;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Incoming Amount total: @total
                        </th>
                        
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>