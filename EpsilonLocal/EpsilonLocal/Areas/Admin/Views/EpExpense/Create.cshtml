@model EpExpense
@{
    ViewData["Title"] = "Create";
}

    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Epsilon Expense</h4>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label>Project Name</label>
                            <input asp-for="Category" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Category"></span>
                        </div>
                         <div class="form-group">
                        <label>İncoming Amount </label>  
                        <input asp-for="İncomingAmount" class="form-control" placeholder="İncomingAmount">
                        <span class="text-danger" asp-validation-for="İncomingAmount"></span>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                     <div class="form-group">
                        <label>ExpenseAmount</label>
                        <input asp-for="ExpenseAmount" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="ExpenseAmount"></span>
                        </div>
                         <div class="form-group">
                        <label>Person</label>
                        <input asp-for="Person" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Person"></span>
                        </div>
                         <div class="form-group">
                        <label>Date</label>
                        <input asp-for="Date" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Date"></span>
                        </div>
                    <div class="form-group">
                        <label>Month</label>
                        <input asp-for="Month" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Month"></span>
                    </div>
                        <button type="submit" class="btn btn-success mr-2">Create</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

