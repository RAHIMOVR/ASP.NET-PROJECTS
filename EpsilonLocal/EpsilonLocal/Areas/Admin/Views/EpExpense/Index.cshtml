@model List<EpsilonLocal.Models.EpExpense>;
@{
    ViewData["Title"] = "Index";
    int count = 1;
    decimal total = 0;
    decimal incomingtotal = 0;
    decimal mtotal = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Epsilon Expenses</h4>
                <a class="btn btn-success" asp-action="Create">Create Epsilon Expenses</a>
                <div class="table-responsive table-responsive-lg table-responsive-md table-responsive-md table-responsive-sm  pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Number
                                </th>
                                 <th>
                                    Date
                                </th>
                                  <th>
                                    Month
                                </th>
                                <th>
                                    Incoming Amount
                                </th>
                                <th>
                                    Category
                                </th>
                                 <th>
                                    Description
                                </th>
                                 <th>
                                    Expense Amount
                                </th>
                                 <th>
                                   Person
                                </th>
                                <th>  
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (EpsilonLocal.Models.EpExpense expense in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                      <td>
                                        @expense.Date
                                    </td>
                                    <td>
                                        @expense.Month
                                    </td>
                                    <td>
                                        @expense.İncomingAmount 
                                    </td>
                                    <td>
                                        @expense.Category
                                    </td>
                                    <td>
                                        @expense.Description
                                    </td>
                                    <td>
                                        @expense.ExpenseAmount 
                                    </td>
                                    <td>
                                        @expense.Person
                                    </td>
                                    <td>
                                        
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@expense.Id"><i class="mdi mdi-table-edit"></i></a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@expense.Id"><i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                                count++;
                                total = total + @expense.İncomingAmount;
                                mtotal = mtotal + expense.ExpenseAmount;
                                incomingtotal = total - mtotal;
                                //incomingtotal = +total;  
                            } 
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Incoming Amount total: @total
                        </th>
                        <th>
                            Expense Amount total :  @mtotal
                        </th>
                        <th>
                            Difference: @incomingtotal
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    
</div>


