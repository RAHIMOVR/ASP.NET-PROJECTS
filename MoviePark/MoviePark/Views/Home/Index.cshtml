@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoviePark</title>
    <style>
        body {
            position: relative;
            margin: 0;
            padding: 0;
            height: 100vh;
            color: white;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

            /* Background image and filter */
            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('/img/background.png') no-repeat center center fixed;
                background-size: cover;
                filter: brightness(50%) blur(5px); /* Dark filter and blur for effect */
                z-index: -1; /* Place behind other content */
            }

        .cover-container {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
        }

        .inner {
            padding: 2rem;
            background: rgba(0, 0, 0, 0.6); /* Semi-transparent black background for readability */
            border-radius: 10px;
        }

        h1.cover-heading {
            color: red; /* Making "MoviePark" red */
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .lead {
            color: black; /* Making the text below black */
            font-weight: bold; /* Making the text bold */
            font-size: 1.5rem;
        }

        .btn-secondary {
            background-color: black;
            color: white;
            border: none;
        }

            .btn-secondary:hover {
                background-color: red; /* Red hover effect for buttons */
                color: white;
            }

        .mastfoot {
            color: white;
            margin-top: auto;
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

        <main role="main" class="inner cover">
            <h1 class="cover-heading">MoviePark</h1>
            <p class="lead">Welcome to MoviePark – your premier destination to easily purchase tickets for the latest hits and upcoming blockbusters at your favorite theaters.</p>
            <p class="lead">
                <a href="#" class="btn btn-lg btn-secondary">Learn more</a>
            </p>
        </main>

        <footer class="mastfoot mt-auto">
            <div class="inner">
                <!-- Footer content goes here -->
            </div>
        </footer>
    </div>
</body>
</html>
