@model Club

<div class="main-container">
    <nav aria-label="breadcrumb" class="bg-primary text-white">
        <div class="container">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="pages-app.html">Find</a></li>
                <li class="breadcrumb-item active">Running Clubs in @Model.Address.City, @Model.Address.State</li>
            </ol>
        </div> 
    </nav>

    <section class="bg-white space-sm">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 mb-4">
                    <img src="@Model.Image" class="rounded img-fluid" alt="Club Image" />
                </div>
                <div class="col-lg-4 d-flex flex-column mx-auto">
                    <h1 class="mb-2">@Model.Title</h1>
                    <h2 class="lead mb-3">@Model.Address.City, @Model.Address.State</h2>
                    <span class="badge badge-secondary">@Model.ClubCategory</span>
                    <ul class="list-inline text-small my-3">
                        <li class="list-inline-item"><i class="icon-thumbs-up"></i> 214</li>
                        <li class="list-inline-item"><i class="icon-message"></i> 6</li>
                    </ul>
                    <div class="btn-group mb-2">
                        <button class="btn btn-success btn-lg">Join Club</button>
                        <button class="btn btn-success dropdown-toggle-split" data-toggle="dropdown">
                            <i class="icon-dots-three-horizontal"></i>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="space-sm">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-md-8">
                    <h5>Overview</h5>
                    <article>@Model.Description</article>
                    <hr />
                    <h5>Discussion</h5>
                    <div class="card">
                        <div class="card-header bg-secondary d-flex justify-content-between">
                            <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#comment-reply">Post a reply</button>
                            <select class="custom-select">
                                <option value="alpha">Alphabetical</option>
                                <option value="old-new" selected>Newest</option>
                                <option value="new-old">Popular</option>
                                <option value="recent">Recently Updated</option>
                            </select>
                        </div>
                        <div class="collapse" id="comment-reply">
                            <form class="card-body">
                                <div class="form-group">
                                    <textarea class="form-control" id="comment-reply-text" rows="4" placeholder="Type your reply here"></textarea>
                                </div>
                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" id="check-notify" />
                                    <label class="form-check-label" for="check-notify">Notify me when someone replies</label>
                                </div>
                                <button type="submit" class="btn btn-success mr-3">Submit reply</button>
                                <a href="#comment-reply" class="text-muted" data-toggle="collapse">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="icon-text-document"></i> Created</span>
                                <span>17/11/2017</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="icon-edit"></i> Last updated</span>
                                <span>23/12/2017</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="icon-thumbs-up"></i> Owner</span>
                                <span>214</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span><i class="icon-share"></i> Shares</span>
                                <span>52</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
